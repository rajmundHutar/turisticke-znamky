{block menu}
	{control menu}
{/block}

{block content}

	<form n:name="filterForm">
		<div class="field">
			<div class="field has-addons">
				<div class="control">
					{input search, class => "input"}
				</div>
				<div class="select">
					{input sort}
				</div>
			</div>
		</div>
		<div class="field">
			<div class="select">
				{input label}
			</div>
		</div>
		<div class="field">
			<div class="control">
				{input ok, class => "button is-info"}
			</div>
			<div class="control">
					{=count($allStamps ?? [])}
			</div>
			<div n:if="$filter['sort'] || $filter['search'] || $filter['label']" class="control">
				<a n:href='this, sort => null, search => null, label => null' class="button is-warning">
					Reset
				</a>
			</div>
		</div>
	</form>

	{if $allStamps}

		{control paginator}

		<div class="columns is-multiline">
			{foreach $allStamps as $stamp}
				<div class="column is-3">
					{include "@stampCard.latte", stamp => $stamp, collection => $collection}
				</div>
			{/foreach}
		</div>

		{control paginator}
	{/if}

	<article n:if="!$allStamps" class="message is-danger">
		<div class="message-body">
			Vašemu filtru neodpovídají žádné položky.
			<br>
			<br>
			<a n:href='this, sort => null, search => null' class="button is-success">
				Reset filter
			</a>
		</div>
	</article>

